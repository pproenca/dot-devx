# -----------------------------------------------------------------------------
# ZOXIDE - Smart Directory Navigation
# -----------------------------------------------------------------------------
eval "$(zoxide init zsh)"

# -----------------------------------------------------------------------------
# FZF - Fuzzy Finder
# -----------------------------------------------------------------------------
source <(fzf --zsh)

export FZF_DEFAULT_OPTS='
  --height=50%
  --layout=reverse
  --border=rounded
  --info=inline
  --preview-window=right:60%:wrap
'

export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND='fd --type d --hidden --follow --exclude .git'
export FZF_CTRL_T_OPTS="--preview 'bat --style=numbers --color=always --line-range :300 {}'"
export FZF_ALT_C_OPTS="--preview 'ls -la {}'"

# -----------------------------------------------------------------------------
# PROJECT NAVIGATION
# -----------------------------------------------------------------------------
export PROJECTS_DIR="$HOME/Documents/Projects"

# pj - Jump to project with fuzzy search + CLAUDE.md preview
pj() {
  local project_dir
  project_dir=$(
    fd --type d --max-depth 1 . "$PROJECTS_DIR" 2>/dev/null | \
    sed "s|$PROJECTS_DIR/||" | \
    fzf --prompt="Project: " \
        --preview "ls -la '$PROJECTS_DIR/{}' && echo '---' && (cat '$PROJECTS_DIR/{}/CLAUDE.md' 2>/dev/null | head -30 || echo 'No CLAUDE.md')"
  )

  if [[ -n "$project_dir" ]]; then
    z "$PROJECTS_DIR/$project_dir"
    _project_status
  fi
}

# pjr - Recent projects based on zoxide frecency
pjr() {
  local project_dir
  project_dir=$(
    zoxide query -l "$PROJECTS_DIR" 2>/dev/null | head -20 | \
    sed "s|$PROJECTS_DIR/||" | \
    fzf --prompt="Recent: "
  )
  [[ -n "$project_dir" ]] && z "$PROJECTS_DIR/$project_dir" && _project_status
}

# Project status on arrival
_project_status() {
  echo ""
  echo "===== $(basename $PWD) ====="
  if git rev-parse --is-inside-work-tree &>/dev/null; then
    echo "Branch: $(git branch --show-current) | Changes: $(git status --porcelain | wc -l | tr -d ' ')"
  fi
  [[ -f "pyproject.toml" ]] && echo "Python: $(python --version 2>/dev/null)"
  [[ -f "package.json" ]] && echo "Node: $(node --version 2>/dev/null)"
  [[ -f "CLAUDE.md" ]] && echo "CLAUDE.md: present" || echo "CLAUDE.md: MISSING"
  echo ""
}

# -----------------------------------------------------------------------------
# TMUX INTEGRATION
# -----------------------------------------------------------------------------

# tp - Quick project session (create or attach)
tp() {
  local project="${1:-$(ls $PROJECTS_DIR | fzf --prompt='Session: ')}"
  [[ -n "$project" ]] && tmux-project "$project"
}

alias tl='tmux list-sessions 2>/dev/null || echo "No sessions"'
alias ta='tmux attach-session -t'
alias tk='tmux kill-session -t'

# -----------------------------------------------------------------------------
# CLAUDE.MD MANAGEMENT
# -----------------------------------------------------------------------------

# claude-init - Create CLAUDE.md from template
claude-init() {
  [[ -f "CLAUDE.md" ]] && echo "CLAUDE.md already exists" && return 1
  local tpl="$HOME/.config/claude-templates"
  local type="${1:-base}"

  # Auto-detect if not specified
  if [[ "$type" == "base" ]]; then
    [[ -f "pyproject.toml" ]] && type="python"
    [[ -f "next.config.js" || -f "next.config.ts" || -f "next.config.mjs" ]] && type="nextjs"
  fi

  cp "$tpl/$type.md" CLAUDE.md 2>/dev/null || cp "$tpl/base.md" CLAUDE.md
  sed -i '' "s/\[Description\]/$(basename $PWD)/" CLAUDE.md
  echo "Created CLAUDE.md ($type template)"
  ${EDITOR:-code} CLAUDE.md
}

# claude-edit - Open CLAUDE.md in editor
claude-edit() {
  [[ -f "CLAUDE.md" ]] && ${EDITOR:-code} CLAUDE.md || echo "No CLAUDE.md found"
}

